doctype html
html
    head
        block head
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            //link(rel='stylesheet' href='/css/style.css')
            link(rel='stylesheet' href='/sass/main.css')
            link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
            link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Lato:300,300i,700')
            title Natours | #{title}

    body(data-alert=`${alert ? alert : ''}`)

        .navigation
            input#navi-toggle.navigation__checkbox(type='checkbox')
            label.navigation__button(for='navi-toggle')
                span.navigation__icon &nbsp;
            .navigation__background &nbsp;
            nav.navigation__nav
                ul.navigation__list
                    li.navigation__item
                        a.navigation__link(href='/')
                            span 01
                            | Home
                    li.navigation__item
                        a.navigation__link(href='/alltours')
                             span 02
                             | All tours
                    if user
                        li.navigation__item
                            a.navigation__link.nav__el--logout(href='#')
                                span 03
                                | Log out
                        li.navigation__item
                            a.navigation__link(href='/me')
                              span 04
                              | My profile
                            #perfil
                              img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                              p#foto= user.name
                    else
                        li.navigation__item
                            a.navigation__link(href='/login')
                                span 03
                                | Login
                        li.navigation__item
                            a.navigation__link(href='/signup')
                                span 04
                                | Sign Up

        header.header-m
            .header-m__logo-box
                img.header-m__logo(src='img/logo-white.png' alt='Logo')
            .header-m__text-box
                h1.heading-primarys
                    span.heading-primarys--main Outdoors
                    span.heading-primarys--sub is where life happens
                a.btn.btn--white.btn--animated(href='/alltours') Discover our tours



